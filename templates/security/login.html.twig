{% extends 'base.html.twig' %}

{% block content %}
    <div class="login-form">

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('login') }}" method="post" style="centered">

            <dir>
                <label for="username">Usuario:</label>
                <input required type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>

            <dir>
                <label for="password">Contraseña:</label>
                <input required type="password" id="password" name="_password"  />
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path"    value="/account" />

                Cómo usar el translate
                <label for="username">{{ 'login.username'|trans([], null) }}</label>
            #}
            <input type="checkbox" id="remember_me" name="_remember_me" checked />
            <label for="remember_me">Keep me logged in</label>

            <button class="btn-large btn-flat" type="submit">Acceder</button>
            <a class="btn-large btn-flat" href="/Register" style ="text-decoration: none" onclick="window.location.href='\register'">{{ 'Registrarse'|trans([], null) }}</a>

        </form>
    </dir>
{% endblock %}